<Window x:Class="GearBoxMaintainApp.Windows.User_Controllers.UserMainPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GearBoxMaintainApp.Windows.User_Controllers"
        mc:Ignorable="d"
        Title="UserMainPage" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <DataGrid IsReadOnly="True" x:Name="DrGrid" Grid.Row="0"/>
        <StackPanel Grid.Column="1">
            <Button x:Name="Refresh" Click="Refresh_Click" Content="Refresh" Width="100" Height="30" Margin="0 10 0 0"/>
            <Button x:Name="Create" Click="Create_Click" Content="Create" Width="100" Height="30" Margin="0 10 0 0"/>
            <Button x:Name="Edit" Content="Edit" Click="Edit_Click" Width="100" Height="30" Margin="0 10 0 0"/>
            <Button x:Name="Delete" Content="Delete" Click="Delete_Click" Width="100" Height="30" Margin="0 50 0 0"/>
        </StackPanel>
        <Button x:Name="Back" Content="Back" Click="Back_Click" Width="100" Height="30" Margin="0 0 0 10" VerticalAlignment="Bottom" Grid.Column="1"/>
    </Grid>
</Window>
